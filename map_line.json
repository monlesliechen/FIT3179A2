{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/monlesliechen/data-analysis/main/fire_nrt_M6_96619.csv"
  },
  "vconcat": [
    {
      "hconcat": [
        {
          "width": 800,
          "height": 500,
          "title": "Fire Event",
          "projection": {
            "parallels": [
              -16,
              -37
            ],
            "rotate": [
              -134,
              0,
              0
            ],
            "type": "conicEqualArea"
          },
          "layer": [
            {
              "data": {
                "url": "https://raw.githubusercontent.com/monlesliechen/data-analysis/main/AUS_TOPO.json",
                "format": {
                  "type": "topojson",
                  "feature": "australian-states"
                }
              },
              "mark": {
                "type": "geoshape",
                "fill": "grey",
                "stroke": "white"
              }
            },
            {
              "transform": [
                {
                  "filter": {
                    "param": "time_brush"
                  }
                }
              ],
              "encoding": {
                "longitude": {
                  "field": "longitude",
                  "type": "quantitative"
                },
                "latitude": {
                  "field": "latitude",
                  "type": "quantitative"
                },
                "color": {
                  "field": "brightness",
                  "type": "quantitative",
                  "scale": {
                    "scheme": "reds"
                  }
                },
                "tooltip": [
                  {
                    "field": "acq_date",
                    "type": "temporal"
                  },
                  {
                    "field": "brightness",
                    "type": "quantitative"
                  }
                ]
              },
              "layer": [
                {
                  "mark": {
                    "type": "circle",
                    "opacity": 0.4,
                    "size": 15
                  }
                },
                {
                  "transform": [
                    {
                      "window": [
                        {
                          "op": "rank",
                          "as": "ranking"
                        }
                      ],
                      "sort": [
                        {
                          "field": "brightness",
                          "order": "descending"
                        }
                      ]
                    },
                    {
                      "filter": "datum.ranking == 1"
                    },
                    {
                      "calculate": "'The worst fire event of the selected period: ' + datum['brightness']",
                      "as": "text_annotation"
                    }
                  ],
                  "layer": [
                    {
                      "mark": {
                        "type": "text",
                        "align": "left",
                        "dx": 4
                      },
                      "encoding": {
                        "text": {
                          "field": "text_annotation"
                        }
                      }
                    },
                    {
                      "mark": {
                        "type": "point",
                        "shape": "cross",
                        "size": 105
                      }
                    }
                  ]
                }
              ]
            }
          ]
        },
        {
          "width": 200,
          "height": 200,
          "title": "Fire Event Distribution",
          "data": {
            "values": [
              {
                "daynight": "day",
                "count": 113467
              },
              {
                "daynight": "night",
                "count": 70126
              }
            ]
          },
          "encoding": {
            "theta": {
              "field": "count",
              "type": "quantitative",
              "stack": true
            },
            "color": {
              "field": "daynight",
              "type": "nominal",
              "legend": null,
              "scale": {
                "domain": [
                  "day",
                  "night"
                ],
                "range": [
                  "#57C2FB",
                  "#0C1E69"
                ]
              }
            }
          },
          "layer": [
            {
              "mark": {
                "type": "arc",
                "outerRadius": 80
              }
            },
            {
              "mark": {
                "type": "text",
                "radius": 90
              },
              "encoding": {
                "text": {
                  "field": "daynight",
                  "type": "nominal"
                }
              }
            }
          ]
        }
      ]
    },
    {
      "width": 1000,
      "height": 90,
      "title": "Fire Over Time",
      "mark": "line",
      "params": [
        {
          "name": "time_brush",
          "select": {
            "type": "interval",
            "encodings": [
              "x"
            ]
          }
        }
      ],
      "encoding": {
        "x": {
          "field": "acq_date",
          "timeUnit": "yearmonth",
          "axis": {
            "title": "",
            "tickCount": 5,
            "grid": false
          }
        },
        "y": {
          "aggregate": "count",
          "title": "Count",
          "scale": {
            "domain": [
              0,
              10000
            ]
          },
          "axis": {
            "tickCount": 3,
            "grid": false
          }
        },
        "color": {
          "field": "count",
          "scale": {
            "scheme": "reds"
          }
        }
      }
    }
  ]
}
